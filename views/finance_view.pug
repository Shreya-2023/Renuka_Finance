doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    title Finance_formValidation
    body 
    .container.my-5
      .row
        .col-12.text-center
          h1 Form Submission
      form(action='/validForm', method='post')
        .mb-3
          label(for='Name', class='form-label') Name:
          input(type='text', name='Name', class='form-control')
        .mb-3
          label(for='Email_ID', class='form-label') Email_ID:
          input(type='text', name='Email_ID', class='form-control')
        .mb-3
          label(for='Phone', class='form-label') Phone:
          input(type='number', name='Phone', class='form-control')
        .mb-3
          label(for='Outelet', class='form-label') Outelet:
          input(type='text', name='Outelet', class='form-control')
        .mb-3
          label(for='Message', class='form-label') Message:
          input(type= 'text', name='Message', class='form-control')
        .mb-3
          label(for='Model', class='form-label') Model:
          input(type='text', name='Model', class='form-control')
        .mb-3
          label(for='Purchase_Time', class='form-label') Purchase_Time:
          input(type='text', name='Purchase_Time', class='form-control')
        .mb-3
          label(for='Loan_Amount', class='form-label')  Loan_Amount:
          input(type='text', name='Loan_Amount', class='form-control')
        .mb-3
          label(for='Loan_Duration_In_Years', class='form-label') Loan_Duration_In_Years:
          input(type='text', name='Loan_Duration_In_Years', class='form-control')
        .mb-3
          input(type='submit', value='Submit', class='btn btn-primary')
          input(type='reset', value='Reset', class='btn btn-secondary mx-2')
